@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml: <http://w3id.org/rml/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> . 

schema:RMLParameterMapShape
    a sh:NodeShape ;
    sh:name "ParameterMap" ;
    sh:description """
    Represents a Parameter Map of a function.
    """ ;
    sh:targetObjectsOf rml:parameterMap ;

    sh:and (
        # Inherited shapes
        schema:RMLTermMapShape
        schema:RMLLogicalTargetPropertiesShape
        # Parameter Map specific shapes
        [
        ]
    ) ;
.
